@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right", @style="font-size:18px" }))
    {
    @Html.AntiForgeryToken()
        <div class="topmargin">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @style = "font-size:18px" })
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Sign Out</a></li>
            </ul>
        </div>
    }
}
else
{
    <div class="topmargin">
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Sign In", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @style = "font-size:24px" })</li>
        </ul>
    </div>
}
